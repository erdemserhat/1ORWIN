<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/mainFrame"
        android:background="#3F7967"
        android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <!-- Sol Bölge -->
        <FrameLayout
            android:layout_width="0dp"
            android:id="@+id/player1Frame"
            android:background="#3F51B5"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="serif-monospace"
                    android:layout_height="wrap_content"
                    android:text="Player 1">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/player1TotalScore"

                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="serif-monospace"
                    android:layout_height="wrap_content"
                    android:text="0.0">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/player1rollDice"
                    android:layout_height="wrap_content"
                    android:text="Roll Dice">
                </Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/player1Hold"
                    android:layout_height="wrap_content"
                    android:text="Hold">

                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:id="@+id/player1TakenScoreTitle"
                        android:textColor="@color/white"
                        android:fontFamily="serif-monospace"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="bottom"
                        android:layout_height="match_parent"
                        android:text="Current : ">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:id="@+id/player1TakenScore"
                        android:textColor="@color/white"
                        android:fontFamily="serif-monospace"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="bottom"
                        android:layout_height="match_parent"
                        android:text="0.0">
                    </TextView>



                </LinearLayout>








            </LinearLayout>






        </FrameLayout>


        <!-- Sağ Bölge -->
        <FrameLayout
            android:layout_width="0dp"
            android:id="@+id/player2Frame"
            android:background="#E91E63"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="serif-monospace"
                    android:layout_height="wrap_content"
                    android:text="Player 2">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:id="@+id/player2TotalScore"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="serif-monospace"
                    android:layout_height="wrap_content"
                    android:text="0.0">

                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/player2RollDice"
                    android:layout_height="wrap_content"
                    android:text="Roll Dice">
                </Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/player2HoldDice"
                    android:layout_height="wrap_content"
                    android:text="Hold">

                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="30sp"
                        android:id="@+id/player2TakenScoreTitle"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="serif-monospace"
                        android:layout_marginBottom="20dp"
                        android:layout_height="match_parent"
                        android:text="Current :">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:textSize="30sp"
                        android:id="@+id/player2TakenScore"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="serif-monospace"
                        android:layout_marginBottom="20dp"
                        android:layout_height="match_parent"
                        android:text="0.0">

                    </TextView>




                </LinearLayout>




            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">


            <pl.droidsonroids.gif.GifImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/dice_number_6"
                android:id="@+id/diceView" />



        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:text="New Game"
                android:id="@+id/newGame"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
            </Button>

        </FrameLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>